{{#with cube}}
<h1>{{name}}</h1>
<img class="cube" src="{{imageUrl}}">
<div class="details">
  <p><span>Description:</span> {{description}}</p>
  <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
  <a class="btn" href="/products">Back</a>
  <a class="btn" href="/products/details/{{_id}}/attach">Attach Accessory</a>
  <a class="btn" href="/products/edit/{{_id}}">Edit</a>
</div>

<h2>Accessories</h2>
<div class="accessories">
    {{#each accessories}}
      {{> accessory}}
    {{else}}
      <h3 class="italic">This cube has no accessories yet...</h3>
    {{/each}}
</div>


<div class="details">
  {{#if error}}
  <p style="color: red">{{error}}</p>
  {{/if}}
  <form action="/comments/{{_id}}/create" method="POST">
    <span>Your name: 
      <input type="text" name="author">
    </span>
    <span>Comment: 
      <textarea name="content"></textarea>
    </span>
    <input type="submit" value="Post comment">
  </form>
  {{#each comments}}
    {{> comment}}
    {{else}}
    <span style="font-style: italic;">No comments yet. Be the first!</span>
    {{/each}}
</div>
{{/with}}